<%= simple_form_for(share, remote: true) do |f| %>
  <td>
    <%= f.association :owner, collection: current_user.owners, label: false %>
  </td>
  <td>
    <%= f.input :ownerability_percentage,  input_html: { step: 0.001 }, placeholder: "Ej: 0.1", label: false%>
  </td>
  <td>
    <%= f.input :payment_percentage,  input_html: { step: 0.001 }, placeholder: "Ej: 0.1", label: false%>
  </td>
  <td>
    <%= f.association :property, collection: @building.properties, input_html: { value: @property.id }, as: :hidden%>
    <input class="hidden" value="<%= controller_name %>" type="hidden" name="render[name]" >
    <button type="submit">
      <i class="material-icons">
        check
      </i>
    </button>
<% end %>
    <button class="close-form-btn">
      <i class="material-icons">
        clear
      </i>
    </button>
  </td>
