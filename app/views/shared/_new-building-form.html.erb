<div class="new-building-form-container">
  <div class="new-building-form-heading">
    <h1>Crear una nueva copropiedad</h1>
  </div>
  <%= simple_form_for(building) do |f| %>
    <i class="fas fa-building"></i>
    <%= f.input :name, label: "Nombre de la copropiedad"%>
    <%= f.input :user_id, as: :hidden, input_html: { value: current_user.id } %>
    <span class="new-building-form-btns">
      <%= link_to "cancelar", buildings_path, class:"form-btn--no-background" %>
      <%= f.submit "Crear", class:"btn form-btn" %>
    </span>
  <% end %>
</div>
