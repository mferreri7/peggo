<div class="new-building-form-container">
  <div class="new-building-form-heading">
    <h1>Cobrar una nueva cuota ordinaria</h1>
  </div>
  <i class="fas fa-money"></i>
  <div class="table-container">
    <table>
      <tr>
        <th>Tipo Propiedad</th>
        <th>NÃºmero</th>
        <th>Cuota</th>
        <th>Acciones</th>
      </tr>
      <%= simple_form_for [building, bill] do |f| %>
        <% bills_array.each do |b| %>
          <%= simple_fields_for 'bills_array[]', b do |p| %>
            <% @properties.each do |property| %>
                <tr data-id="<%=property.id%>" class="table-row-link">
                  <td> <%=property.property_type%> </td>
                  <td> <%=property.name%> </td>
                  <td> $ 3000 </td>
                  <td> <%= p.input :enviar, label: false, as: :boolean, checked_value: true, unchecked_value: false %> </td>
                  <%= p.input :share, as: :hidden, input_html: { value: Share.all.first } %>
                  <%= p.input :status, as: :hidden, input_html: { value: "Pendiente" } %>
                  <%= p.input :property, as: :hidden, input_html: { value: property.id } %>
                  <%= p.input :name, as: :hidden, input_html: { value: property.name } %>
                </tr>
            <% end %>
          <%end %>
        <% end %>
        <%= f.button :submit %>
      <% end %>
    </table>
  </div>
</div>
