<%= render 'shared/sidebar' %>
<div class="page-content-wrapper">
  <h1 class="properties-index-title">Lista de propietarios</h1>
    <div class="table-container">
      <table>
        <tr>
          <th>Propietario</th>
          <th>Cédula</th>
          <th>Teléfono</th>
          <th>Email</th>
          <th>Propiedad</th>
          <th>Participación en la prop </th>
        </tr>
      <% @shares.each do |array| %>
        <% array.each do |share| %>
          <tr>
            <td> <%= share.owner.name %> </td>
            <td> <%= share.owner.card_number  %> </td>
            <td> <%= share.owner.phone %> </td>
            <td> <%= share.owner.email %> </td>
            <td> <%= share.property.name %> </td>
            <td> <%= share.ownerability_percentage %> </td>
          </tr>
        <% end %>
      <% end %>
    </table>
  </div>
</div>
