<div class="new-building-form-container">
  <div class="new-building-form-heading">
    <h1>Agregar un nuevo propietario</h1>
  </div>
  <%= simple_form_for(owner) do |f| %>
    <i class="fas fa-building"></i>
    <%= f.input :name, label: "Nombre del propietario"%>
    <%= f.input :card_number, label: "Cédula del propietario"%>
    <%= f.input :phone, label: "Teléfono del propietario"%>
    <%= f.input :email, label: "Correo electrónico del propietario"%>
    <%= f.input :user_id, as: :hidden, input_html: { value: current_user.id } %>
    <span class="new-building-form-btns">
      <%= link_to "cancelar", :back, class:"form-btn--no-background" %>
      <%= f.submit "Crear", class:"btn form-btn" %>
    </span>
  <% end %>
</div>
