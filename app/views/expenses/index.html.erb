<%= render 'shared/sidebar' %>
<div class="page-content-wrapper">
  <h1 class="properties-index-title">Lista de Egresos</h1>
  <div class="table-container">
    <div class="table">
      <div class="table-row">
        <div class="table-header">Número</div>
        <div class="table-header">Beneficiario</div>
        <div class="table-header">Detalle</div>
        <div class="table-header">Fecha</div>
        <div class="table-header">Forma de Pago</div>
        <div class="table-header">Monto</div>
        <div class="table-header">Acciones</div>
      </div>
      <% @expenses.each do |expense| %>
          <div data-id="<%=expense.id%>" class="table-row-link table-row" onclick= "location.href= '<%= building_expense_path(@building, expense)%>'">
            <div class="table-data"><%=expense.formated_number%></div>
            <div class="table-data"><%= "Miguel Ferrer" %></div>
            <div class="table-data"><%= expense.description %></div>
            <div class="table-data"><%= expense.date %></div>
            <div class="table-data"><%= "Banco" %></div>
            <div class="table-data"><%= humanized_money_with_symbol expense.amount %></div>
            <div class="table-data">
              <%= link_to print_building_expense_path(@building, expense), target: :blank  do %>
                <i class="material-icons"> print </i>
              <% end %>
              <%= link_to edit_building_expense_path(@building, expense), class: "edit-property" do %>
                <i class="material-icons"> create </i>
              <% end %>
              <%= link_to building_expense_path(@building, expense), class: "destroy-property", method: :delete, data: { confirm: '¿Estás seguro?' } do %>
                <i class="material-icons"> delete </i>
              <% end %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
  <a class="mdc-fab fab-bottom-right fab-color" aria-label="Favorite" href="<%= new_building_expense_path %>">
   <i class="material-icons">
    credit_card
   </i>
   +
  </a>
</div>


