function refreshForm(innerHTML) {
  const newReviewForm = document.getElementById('new_item');
  newReviewForm.innerHTML = innerHTML;
}

function addReview(reviewHTML) {
  const reviews = document.getElementById('items-table');
  reviews.insertAdjacentHTML('beforeend', reviewHTML);
}

<% if @item.errors.any? %>
  refreshForm('<%= j render "shared/item-form", business: @business, item: @item %>');
<% else %>
  addReview('<%= j render "shared/item-row", item: @item %>');
  refreshForm('<%= j render "shared/item-form", business: @business, item: Item.new %>');
<% end %>
